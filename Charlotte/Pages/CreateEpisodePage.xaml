<Window x:Class="Charlotte.Pages.CreateEpisodePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Charlotte.Pages"
        mc:Ignorable="d"
        Title="CreateEpisodePage" Height="720" Width="1280">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Title" HorizontalAlignment="Center"></TextBlock>
            <TextBox x:Name="TitleTB" Height="50" Width="700"></TextBox>
            <TextBlock Text="Description" HorizontalAlignment="Center"></TextBlock>
            <TextBox x:Name="DescriptionTB" Height="50" Width="700"></TextBox>

            <Button Content="Создать" Click="CreatePhotoBtn_Click"></Button>
            <Button x:Name="AddictionalPhotoAddBtn" Content="добавить доп фото" Click="AddictionalPhotoAddBtn_Click"></Button>
            <Button x:Name="GoBackBtn" Content="В меню" Click="GoBackBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
